<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notefy</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10">
            <form action="/create" method="post">
                <input class="block text-white w-full px-5 py-2 outline-none bg-zinc-800" type="text"  placeholder="title goes here" name="title" required>
                <textarea class="block text-white mt-2 w-full resize-none px-5 py-2 outline-none bg-zinc-800" placeholder="write your task here" name="details" required></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="create task">
            </form>

        </div>
    
    <div class="task flex gap-3 flex-wrap p-10">
        <% if(files.length>0){ %>
        <% files.forEach(function(val) { %>
            
            <div class="task min-w-72 px-3 py-4 rounded-md bg-zinc-800">
                <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                <div class="flex w-full justify-between item-centre mt-3">
                    <a  class="text-blue-500 inline-block " id="btn" href="/file/<%= val %> ">Read more.</a>
                    <a class="text-zinc-600" href="/edit/<%= val %>">edit filename</a>
                </div>
            </div>
            
        <% }); %>
        <% }else{ %>
            <h3 class="text-zinc-600">no task yet.</h3>
            <% } %>
        
    </div>
</div>
    
</body>
</html>